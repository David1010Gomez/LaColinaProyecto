<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>La Colina</title>
    <link href="~/Css/FaIcons.css?1.0.3" rel="stylesheet" />
    <link href="~/Content/Estilos.css?1.0.7" rel="stylesheet" />
    <link href="~/Css/Jquery-confirm.css" rel="stylesheet" />
    @*<script src="~/Scripts/jquery-3.7.1.js"></script>*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/plugins/datatables/css")

</head>

<body style="padding-top: 0%">
    <div id="Cargando" style="background-color: rgba(64, 63, 63, 0.77); position: absolute; width: 100%;
        height: 100%; top: 0; left: 0; z-index: 9999; display: none;">
        <div id="fountainG">
            <div id="fountainG_1" class="fountainG"></div>
            <div id="fountainG_2" class="fountainG"></div>
            <div id="fountainG_3" class="fountainG"></div>
            <div id="fountainG_4" class="fountainG"></div>
            <div id="fountainG_5" class="fountainG"></div>
            <div id="fountainG_6" class="fountainG"></div>
            <div id="fountainG_7" class="fountainG"></div>
            <div id="fountainG_8" class="fountainG"></div>
        </div>
    </div>
    <div class="navbar navbar-expand-lg" style="background-color: #004b22; border: none;">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @Html.ActionLink("La Colina Restaurante", "LaColinaRestaurante", "Inicio", new { area = "" }, new
            {
                @class = "navbar-brand",
                style = "color: white; font-size: 30px; font-family: Mistral; margin-top: 5px;"
            })
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav" style="margin-left: 10%; ">
                    <li class="nav-item" style="padding: 5px;">
                        @Html.ActionLink("Inicio", "LaColinaRestaurante", "Inicio", new { area = "" }, new { @class = "nav-link", @style = "color: white;" })
                    </li>
                    <li class="nav-item" style="padding: 5px;">
                        @Html.ActionLink("Pedido", "SeleccionarMesa", "Solicitud", new { area = "" }, new { @class = "nav-link active", @style = "color: white;" })
                    </li>
                    @if (Session["IdPerfil"].ToString() == "1" || Session["IdPerfil"].ToString() == "2")
                    {
                        <li class="nav-item" style="padding: 5px;">
                            @Html.ActionLink("Ventas", "Ingresos", "Ventas", new { area = "" }, new { @class = "nav-link", @style = "color: white;" })
                        </li>
                    }
                    @if (Session["IdPerfil"].ToString() == "1")
                    {
                        <li class="nav-item" style="padding: 5px;">
                            @Html.ActionLink("Nomina", "Gastos", "Ventas", new { area = "" }, new { @class = "nav-link", @style = "color: white;" })
                        </li>
                    }
                    @if (Session["IdPerfil"].ToString() == "1" || Session["IdPerfil"].ToString() == "2")
                    {
                        <li class="nav-item" style="padding: 5px;">
                            @Html.ActionLink("Configuración", "Configuraciones", "Configuracion", new { area = "" }, new { @class = "nav-link", @style = "color: white;" })
                        </li>
                    }
                    <li style="padding: 5px;">
                        <a id="CerrarSesion" href="@Url.Action("Salir", "Home")">
                            <i class="fa fa-2x fa-sign-out" style="color: white; cursor: pointer;"></i>
                        </a>
                    </li>
                    <li style="padding: 5px; color: white; margin-left: 100px; margin-top: 15px;">
                        <div>Usuario:<b style="font-size: 18px;"> @Session["Nombre"]</b></div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br /><br />
        @RenderBody()
        <hr />
        <footer style="text-align:center;">
            <p>
                &copy; @DateTime.Now.Year <h3><b>La Colina Restaurante</b></h3>
                Km. 6.5 Via Siberia -Tenjo
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/ScriptsViews/Shared/AlertasLayout.js?1.0.11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/plugins/datatables/js")
    @RenderSection("scripts", required: false)


    <script src="~/Scripts/jquery.signalR-2.4.3.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Jquery-confirm.js"></script>


</body>
</html>
