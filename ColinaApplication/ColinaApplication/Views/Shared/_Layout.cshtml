<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>La Colina</title>
    <link href="~/Css/FaIcons.css" rel="stylesheet" />
    <link href="~/Content/Estilos.css?1.0.4" rel="stylesheet" />
    @*<link href="~/Css/fontawesome-free-5.2.0-web/css/all.css" rel="stylesheet" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous"/>*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="Cargando" style="background-color: rgba(64, 63, 63, 0.77); position: absolute; width: 100%; 
        height: 100%; top: 0; left: 0; z-index: 9999; display: none;">
        <div id="fountainG">
            <div id="fountainG_1" class="fountainG"></div>
            <div id="fountainG_2" class="fountainG"></div>
            <div id="fountainG_3" class="fountainG"></div>
            <div id="fountainG_4" class="fountainG"></div>
            <div id="fountainG_5" class="fountainG"></div>
            <div id="fountainG_6" class="fountainG"></div>
            <div id="fountainG_7" class="fountainG"></div>
            <div id="fountainG_8" class="fountainG"></div>
        </div>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #004b22; border: none;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("La Colina Restaurante", "LaColinaLogin", "Home", new { area = "" }, new
           {
               @class = "navbar-brand",
               style = "color: white; font-size: 30px; font-family: Mistral; margin-top: 5px;"
           })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="padding: 5px;">
                        @Html.ActionLink("Inicio", "LaColinaRestaurante", "Inicio")
                    </li>
                    <li style="padding: 5px;">@Html.ActionLink("Pedido", "SeleccionarMesa", "Solicitud")</li>
                    <li style="padding: 5px;">@Html.ActionLink("Maestros", "Personal", "Maestro")</li>
                    <li style="padding: 5px;">@Html.ActionLink("Factura", "Factura", "Caja")</li>
                    <li style="padding: 5px;">@Html.ActionLink("Configuración", "Configuracion", "Maestro")</li>
                    <li style="padding: 5px;">
                        <a href="@Url.Action("Salir", "Home")">
                            <i class="fa fa-2x fa-sign-out" style="color: white; cursor: pointer;"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align:center;">
            <p>&copy; @DateTime.Now.Year <b><h3>La Colina Restaurante</h3></b>
            Km. 6.5 Via Siberia -Tenjo
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    
    <script src="~/Scripts/jquery.signalR-2.3.0.js"></script>
    <script src="~/signalr/hubs"></script>

    <script src="~/ScriptsViews/Shared/AlertasLayout.js?1.0.4"></script>


</body>
</html>
