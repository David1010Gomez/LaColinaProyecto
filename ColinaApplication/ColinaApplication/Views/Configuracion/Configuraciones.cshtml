@model ColinaApplication.Data.Clases.SuperViewModels

@{
    ViewBag.Title = "Configuraciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["IdPerfil"].ToString() == "1" || Session["IdPerfil"].ToString() == "2")
{
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header"><i class="fa fa-cogs"></i> Configuraciones </h1>
        </div>
        <div id="DivMesas" class="col-md-12">
            <h3 class="page-header"><i class="fa fa-table"></i> Mesas </h3>
            @using (Html.BeginForm("AgregarEditarMesas", "Configuracion", FormMethod.Post, new { @style = "padding: 10px; background-color: #eeeeee;" }))
            {
                <div class="col-md-12" style="overflow-x:auto;">
                    <table id="" class="table table-bordered table-hover TablaList" style=" width: 100%; border: 0px solid #dddddd; background-color: white;" data-page-length='5'>
                        <thead style="background-color: black; color: white;">
                            <tr>
                                <th></th>
                                <th>ID</th>
                                <th># MESA</th>
                                <th>ID USUARIO</th>
                                <th>NOMBRE MESA</th>
                                <th>DESCRIPCIÓN</th>
                                <th>ESTADO</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Mesas.Count; i++)
                            {
                                <tr>
                                    <td style=" text-align: center;">
                                        <i class="fa fa-pencil" style="cursor: pointer;" onclick="EditarMesa('@Model.Mesas[i].ID', '@Model.Mesas[i].NUMERO_MESA', '@Model.Mesas[i].ID_USUARIO', '@Model.Mesas[i].NOMBRE_MESA', '@Model.Mesas[i].DESCRIPCION', '@Model.Mesas[i].ESTADO')"></i>
                                    </td>
                                    <td data_val="Elemento_@i">
                                        @Model.Mesas[i].ID
                                    </td>
                                    <td>
                                        @Model.Mesas[i].NUMERO_MESA
                                    </td>
                                    <td>
                                        @Model.Mesas[i].ID_USUARIO
                                    </td>
                                    <td>
                                        @Model.Mesas[i].NOMBRE_MESA
                                    </td>
                                    <td>
                                        @Model.Mesas[i].DESCRIPCION
                                    </td>
                                    <td>
                                        @Model.Mesas[i].ESTADO
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6" style="float: inherit;">
                    <div class="col-md-12">
                        <i class="fa fa-2x fa-trash-o" style="float: right; cursor: pointer;" onclick="LimpiaCamposMesa()"></i>
                        <br />
                    </div>
                    <div class="col-md-12">
                        <small><b>Nombre Mesa:</b></small>
                        @Html.HiddenFor(x => x.MesasModel.ID, new { @Id = "IdMesa", Value = "" })
                        @Html.TextBoxFor(x => x.MesasModel.NOMBRE_MESA, new { @Id = "NombreMesa", Placeholder = "Digite el nombre de la mesa", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true, Autocomplete = "off" })
                    </div>
                    <div class="col-md-12">
                        <small><b># Mesa:</b></small>
                        @Html.TextBoxFor(x => x.MesasModel.NUMERO_MESA, new { @Id = "NumeroMesa", Placeholder = "Digite el número de la mesa", @type = "number", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true, Autocomplete = "off" })
                    </div>
                    <div class="col-md-12">
                        <small><b>Usuario Asiganar: </b></small>
                        @Html.DropDownListFor(x => x.MesasModel.ID_USUARIO, (List<SelectListItem>)ViewBag.listaUsuariosAdmin, "-- SELECCIONE --",
             new { @Id = "IdUsuarioMesa", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true })
                    </div>
                    <div class="col-md-12">
                        <small><b>Descripción Mesa:</b></small>
                        @Html.TextBoxFor(x => x.MesasModel.DESCRIPCION, new { @Id = "DescripcionMesa", Placeholder = "Digite la descripcion de la mesa", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true, Autocomplete = "off" })
                    </div>
                    <div class="col-md-12">
                        <small><b>Estado:</b></small>
