                        {
                                new SelectListItem() {Text = "CERRADO", Value="CERRADO"},
                                new SelectListItem() {Text = "LIBRE", Value="LIBRE"},
                                new SelectListItem() {Text = "OCUPADO", Value="OCUPADO"},
                                new SelectListItem() {Text = "ESPERA", Value="ESPERA"},
                                new SelectListItem() {Text = "NO DISPONIBLE", Value="NO DISPONIBLE"},

