@model ColinaApplication.Data.Clases.SuperViewModels

@{
    ViewBag.Title = "Configuraciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <h1 class="page-header"><i class="fa fa-cogs"></i> Configuraciones </h1>
    </div>
    <div class="col-md-12">
        <h3 class="page-header"><i class="fa fa-th-list"></i> Inventarios </h3>
        @using (Html.BeginForm("AgregarEditarCategoria", "Configuracion", FormMethod.Post, new { @style = "padding: 10px; background-color: #eeeeee;" }))
        {
            <div class="col-md-12">
                <h4><b>Categorias </b></h4>
            </div>
            <div class="col-md-12">
                <table id="TablaList" class="table table-bordered table-hover" style=" width: 100%; background-color: white;" data-page-length='5'>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>CATEGORIA</th>
                            <th>ESTADO</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Categorias.Count; i++)
                        {
                            <tr>
                                <td data_val="Elemento_@i">
                                    @Model.Categorias[i].ID
                                </td>
                                <td>
                                    @Model.Categorias[i].CATEGORIA
                                </td>
                                <td>
                                    @Model.Categorias[i].ESTADO
                                </td>
                                <td style=" text-align: center;">
                                    <i class="fa fa-pencil" style="cursor: pointer;" onclick="EditarCategoria('@Model.Categorias[i].ID', '@Model.Categorias[i].CATEGORIA', '@Model.Categorias[i].ESTADO')"></i>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <br />
            <div class="col-md-12">
                <i class="fa fa-2x fa-trash-o" style="float: right; cursor: pointer;" onclick="LimpiaCamposCategoria()"></i>
                <br />
            </div>
            <div class="col-md-12">
                <small><b>Nombre Categoria:</b></small>
                @Html.HiddenFor(x => x.CategoriasModel.ID, new { @Id = "IdCategoria", Value = "" })
                @Html.TextBoxFor(x => x.CategoriasModel.CATEGORIA, new { @Id = "NomCategoria", Placeholder = "Digite el nombre de la categoria", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true, Autocomplete = "off" })
            </div>
            <div class="col-md-12">
                <small><b>Estado:</b></small>
                @Html.DropDownListFor(x => x.CategoriasModel.ESTADO, new List<SelectListItem>
                {
                        new SelectListItem() {Text = "-- SELECCIONE --", Value=""},
                        new SelectListItem() {Text = "ACTIVO", Value="ACTIVO"},
                        new SelectListItem() {Text = "INACTIVO", Value="INACTIVO"}
                },
                new { @Id = "EstadoCategoria", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true })
            </div>
            <br />
            <div class="col-md-12">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
        }
        <br />
        @using (Html.BeginForm("AgregarEditarProducto", "Configuracion", FormMethod.Post, new { @style = "padding: 10px; background-color: #eeeeee;" }))
        {
            <div class="col-md-12">
                <h4><b>Productos </b></h4>
            </div>
            <div class="col-md-12">
                <table id="TablaList" class="table table-bordered table-hover" style=" width: 100%; background-color: white;" data-page-length='5'>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>ID CATEGORIA</th>
                            <th>FECHA_INGRESO</th>
                            <th>PRODUCTO</th>
                            <th>PRECIO</th>
                            <th>CANTIDAD</th>
                            <th>DESCRIPCION</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Productos.Count; i++)
                        {
                            <tr>
                                <td data_val="Elemento_@i">
                                    @Model.Productos[i].ID
                                </td>
                                <td data_val="Elemento_@i">
                                    @Model.Productos[i].ID_CATEGORIA
                                </td>
                                <td>
                                    @Model.Productos[i].FECHA_INGRESO
                                </td>
                                <td>
                                    @Model.Productos[i].NOMBRE_PRODUCTO
                                </td>
                                <td>
                                    @Model.Productos[i].PRECIO
                                </td>
                                <td>
                                    @Model.Productos[i].CANTIDAD
                                </td>
                                <td>
                                    @Model.Productos[i].DESCRIPCION
                                </td>
                                <td style=" text-align: center;">
                                    <i class="fa fa-pencil" style="cursor: pointer;" onclick="EditarProducto()"></i>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <div class="col-md-12">
                <i class="fa fa-2x fa-trash-o" style="float: right; cursor: pointer;" onclick="LimpiaCamposProductos()"></i>
                <br />
            </div>
            <div class="col-md-12">
                <small><b>Categoria: </b></small>
                @Html.HiddenFor(x => x.ProductosModel.ID, new { @Id = "IdProducto", Value = "" })
                @Html.DropDownListFor(x => x.ProductosModel.ID_CATEGORIA, new List<SelectListItem>
                {
                        new SelectListItem() {Text = "-- SELECCIONE --", Value=""},
                        new SelectListItem() {Text = "ACTIVO", Value="ACTIVO"},
                        new SelectListItem() {Text = "INACTIVO", Value="INACTIVO"}
                },
                new { @Id = "IdCategoriaProducto", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true })
            </div>
            <div class="col-md-12">
                <small><b>Nombre Producto:</b></small>
                @Html.TextBoxFor(x => x.ProductosModel.NOMBRE_PRODUCTO, new { @Id = "NomProducto", Placeholder = "Digite el nombre del producto", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true, Autocomplete = "off" })
            </div>
            <div class="col-md-12">
                <small><b>Precio Producto:</b></small>
                @Html.TextBoxFor(x => x.ProductosModel.PRECIO, new { @Id = "PrecioProducto", Placeholder = "Digite el precio del producto", type="number", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true, Autocomplete = "off" })
            </div>
            <div class="col-md-12">
                <small><b>Cantidad a inventario:</b></small>
                @Html.TextBoxFor(x => x.ProductosModel.CANTIDAD, new { @Id = "CantidadProducto", Placeholder = "Digite la cantidad existente", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true, Autocomplete = "off" })
            </div>
            <div class="col-md-12">
                <small><b>Descripcion:</b></small>
                @Html.TextBoxFor(x => x.ProductosModel.CANTIDAD, new { @Id = "CantidadProducto", Placeholder = "Digite la cantidad existente", @class = "form-control input-sm", @style = "max-width: 100% !important;", Value = "", Required = true, Autocomplete = "off" })
            </div>
            <br />
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>
        }
    </div>
    <div class="col-md-6">
        <h3 class="page-header"><i class="fa fa-table"></i> Mesas </h3>
        
    </div>
    <div class="col-md-6">
        <h3 class="page-header"><i class="fa fa-user"></i> Usuarios </h3>
        <p>
            123
        </p>
    </div>
    <div class="col-md-6">
        <h3 class="page-header"><i class="fa fa-print"></i> Impresoras </h3>
        <p>
            123
        </p>
    </div>
    <div class="col-md-6">
        <h3 class="page-header"><i class="fa fa-money"></i> Impuestos </h3>
        <p>
            123
        </p>
    </div>
    <div class="col-md-6">
        <h3 class="page-header"><i class="fa fa-users"></i> Perfiles </h3>
        <p>
            123
        </p>
    </div>
</div>

@section Scripts{

    <script src="~/ScriptsViews/Configuracion/Configuraciones.js?1.0.5"></script>
}

