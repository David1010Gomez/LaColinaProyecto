                            <h3>
                                #1
                            </h3>
                            <p>Mesa 1</p>
                            <p><b>Cliente: </b>Jose David Gomez Cruz</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-check"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body table-responsive">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td>
                                <small>Otros Cobros: </small>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>Descuentos: </small>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <small>Total: </small>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-8">
            <div class="box-body">
                <table id="Tabla2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Rendering engine</th>
                            <th>Browser</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Trident</td>
                            <td>
                                Internet
                                Explorer 4.0
                            </td>
                        </tr>
                        <tr>
                            <td>Trident</td>
                            <td>
                                Internet
                                Explorer 5.0
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <table class="" style="width: 100%;">
            <tr>
                <td colspan="6">
                    <h4><b>Observaciones: </b></h4>
                    @Html.TextAreaFor(m => m.OBSERVACIONES, new { @class = "form-control input-sm", id = "ObservacionesAsesor", style = "margin-left:5px; width:100%; height:70px; max-width: 100%;" })

                </td>
            </tr>
            <tr>
                <td></td>
            </tr>
        </table>
