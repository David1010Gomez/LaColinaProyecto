
@{
    ViewBag.Title = "Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="page-header"><i class="fa fa-columns"></i> Mesas </h1>
        <p>Seleccione una mesa para continuar: 
            <div style="float: right;">
                <i class="fa fa-check text-success" style="float:left; margin:5px;"> Disponible </i>
                <i class="fa fa-arrow-down text-danger" style="float:left; margin:5px;"> Ocupado</i>
                <i class="fa fa-clock-o text-warning" style="float:left; margin:5px;"> Para Llevar</i>
                <i class="fa fa-times-circle text-primary" style="float:left; margin:5px;"> No Habilitada</i>
            </div>
        </p>
        <div id="ListaMesas" class="jumbotron">
            <div style="width: 100%;">
                <div class="panel panel-success" style="width: 100px; text-align: center; float: left; margin: 5px; cursor: pointer; ">
                    <div class="panel-heading">
                        <h2 class="panel-title">Mesa 1</h2>
                    </div>
                    <i class="fa fa-3x fa-check text-success"></i>
                </div>
                <div class="panel panel-danger" style="width: 100px; text-align: center; float: left; margin: 5px; cursor: pointer; ">
                    <div class="panel-heading">
                        <h2 class="panel-title">Mesa 2</h2>
                    </div>
                    <i class="fa fa-3x fa-arrow-down text-danger"></i>
                </div>
                <div class="panel panel-warning" style="width: 100px; text-align: center; float: left; margin: 5px; cursor: pointer; ">
                    <div class="panel-heading">
                        <h2 class="panel-title">Mesa 3</h2>
                    </div>
                    <i class="fa fa-3x fa-clock-o text-warning"></i>
                </div>
                <div class="panel panel-default" style="width: 100px; text-align: center; float: left; margin: 5px; cursor: not-allowed;" >
                    <div class="panel-heading">
                        <h2 class="panel-title">Mesa 4</h2>
                    </div>
                    <i class="fa fa-3x fa-times-circle text-primary"></i>
                </div>
            </div>
            <br /><br /><br />



        </div>
    </div>
</div>





